<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cxk.infrastructure.adapter.dao.IUserDao">

    <resultMap id="userMap" type="org.cxk.infrastructure.adapter.dao.po.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="del_version" property="delVersion"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="org.cxk.infrastructure.adapter.dao.po.User">
        INSERT INTO user (id, username,  password, email, phone, is_deleted, last_login_time,del_version, create_time, update_time)
        VALUES (#{id}, #{username}, #{password}, #{email}, #{phone}, #{isDeleted}, #{lastLoginTime},#{delVersion}, #{createTime}, #{updateTime})
    </insert>

    <select id="findByUsername" parameterType="java.lang.String" resultMap="userMap">
        SELECT * FROM user WHERE username = #{username} AND is_deleted = false
    </select>

    <select id="findAll" resultMap="userMap">
        SELECT * FROM user WHERE is_deleted = false
    </select>

    <update id="deleteByUsername" parameterType="java.lang.String">
        UPDATE user
        SET
        is_deleted = 1,
        del_version = id,  <!-- 直接将主键id赋值给del_version -->
        update_time = NOW()
        WHERE username = #{username} AND is_deleted = 0
    </update>


</mapper>
